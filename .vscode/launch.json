    "version": "0.2.0",
    "configurations": [
        {
            "name": "NPM Cukes",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
            "args": [
                "${workspaceFolder}/FeatureFiles/*.feature",
                "-r",
                "${workspaceFolder}/JSFiles/CucumberConfig.js",
                "--tags",
                "@your-tags"
            ]
        }
        
        
